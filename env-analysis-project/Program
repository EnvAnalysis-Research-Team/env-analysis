// Remove this line, as AddDefaultIdentity is not available without the Identity.UI package:
// builder.Services.AddDefaultIdentity<ApplicationUser>(options => options.SignIn.RequireConfirmedAccount = true).AddEntityFrameworkStores<env_analysis_projectContext>();

// Keep only AddIdentity, which is sufficient for Identity setup without Identity.UI:
builder.Services.AddIdentity<ApplicationUser, IdentityRole>(options =>
{
    options.SignIn.RequireConfirmedAccount = false;
})
.AddEntityFrameworkStores<env_analysis_projectContext>()
.AddDefaultTokenProviders();