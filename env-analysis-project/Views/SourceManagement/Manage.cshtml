@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Source Management";
}

<div class="max-w-8xl mx-auto bg-white shadow-sm rounded-md p-6 space-y-6">
    <!-- HEADER -->
    @* <div class="flex flex-col md:flex-row justify-end md:items-center mb-4">
        <button class="bg-blue-600 hover:bg-blue-700 text-white text-xs px-3 py-1.5 rounded-md transition">
            + Add New Source
        </button>
    </div>
 *@
    <!-- TOP SECTION: MAP + SOURCE TYPE -->
    <div class="grid grid-cols-8 gap-4">
        <!-- Map Widget -->
        <div class="col-span-8 md:col-span-7 bg-gray-100 border border-gray-200 rounded-lg p-4">
            <h2 class="text-sm font-semibold text-gray-700 mb-2">Map</h2>
            <div class="w-full h-80 bg-gray-200 rounded-md flex items-center justify-center text-gray-400">
                <!-- Map placeholder -->
                <span class="text-sm">[ Map will render here ]</span>
            </div>
        </div>

        <!-- Source Type Box -->
        <div class="col-span-8 md:col-span-1 bg-gray-50 border border-gray-200 rounded-lg p-4 flex flex-col justify-between">
            <h2 class="text-sm font-semibold text-gray-700 mb-3">Source Type</h2>

            <div class="space-y-2 text-xs text-gray-600">
                <div class="flex justify-between">
                    <span>Industrial</span>
                    <span class="font-medium text-gray-800">12</span>
                </div>
                <div class="flex justify-between">
                    <span>Transportation</span>
                    <span class="font-medium text-gray-800">8</span>
                </div>
                <div class="flex justify-between">
                    <span>Residential</span>
                    <span class="font-medium text-gray-800">5</span>
                </div>
            </div>

            <button class="mt-4 bg-blue-600 hover:bg-blue-700 text-white text-xs py-1.5 rounded-md transition">
                View Details
            </button>
        </div>
    </div>
    <!-- EMISSION SOURCE TABLE -->
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <div class="flex justify-between items-center mb-3">
            <h2 class="text-sm font-semibold text-gray-700">Emission Sources</h2>
            <div class="flex space-x-2">
                <input type="text"
                       placeholder="Search source..."
                       class="text-xs border border-gray-300 rounded-md px-2 py-1 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                <button class="bg-gray-200 hover:bg-gray-300 text-gray-700 text-xs px-3 py-1.5 rounded-md transition">
                    <i class="bi bi-arrow-clockwise text-sm"></i>
                </button>
            </div>
        </div>

        <table class="w-full text-xs text-left border-t border-gray-200">
            <thead class="bg-gray-100 text-gray-700 uppercase">
                <tr>
                    <th class="px-3 py-2">Source Name</th>
                    <th class="px-3 py-2">Source Code</th>
                    <th class="px-3 py-2">Location</th>
                    <th class="px-3 py-2">Latitude</th>
                    <th class="px-3 py-2">Longitude</th>
                    <th class="px-3 py-2">Source Type</th>
                    <th class="px-3 py-2 text-center">Status</th>
                    <th class="px-3 py-2 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @if (Model != null && Model.Any())
                {
                    foreach (var src in Model)
                    {
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-3 py-2">@src.SourceName</td>
                            <td class="px-3 py-2">@src.SourceCode</td>
                            <td class="px-3 py-2">@src.Location</td>
                            <td class="px-3 py-2">@src.Latitude</td>
                            <td class="px-3 py-2">@src.Longitude</td>
                            <td class="px-3 py-2">@src.SourceType?.SourceTypeName</td>
                            <td class="px-3 py-2 text-center">
                                @if (src.IsActive)
                                {
                                    <span class="text-green-600 font-medium">Active</span>
                                }
                                else
                                {
                                    <span class="text-red-500 font-medium">Inactive</span>
                                }
                            </td>
                            <td class="px-3 py-2 text-center space-x-2">
                                <a asp-action="Edit" asp-route-id="@src.EmissionSourceID"
                                   class="text-blue-600 hover:text-blue-800" title="Edit">
                                    <i class="bi bi-pencil-square text-sm"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@src.EmissionSourceID"
                                   class="text-gray-600 hover:text-gray-800" title="Details">
                                    <i class="bi bi-eye text-sm"></i>
                                </a>
                                <form asp-action="Delete" method="post" class="inline">
                                    <input type="hidden" name="id" value="@src.EmissionSourceID" />
                                    <button type="submit" class="text-red-600 hover:text-red-800" title="Delete">
                                        <i class="bi bi-trash text-sm"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="px-3 py-4 text-center text-gray-400">
                            No emission sources found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
